<div class="row">
	<div class="col-md-6">
		
		<%= form_tag :action => 'create' do %>

		  <%= hidden_field :post, :parent_id %>

		  <div class="form-group">
		  	<label for="post_nombre">Nombre</label>
		  	<%= text_field 'post', 'nombre', :class => 'form-control' %>
		  </div>

		  <div class="form-group">
		  	<label for="post_subject">Resumen</label>
		  	<%= text_field 'post', 'subject', :class => 'form-control' %>
		  </div>

		  <div class="form-group">
		  	<label for="post_texto">Texto</label>
		  	<%= text_area 'post', 'texto', :class => 'form-control' %>
		  </div>

		  <%= submit_tag 'Postear', :class => 'btn btn-primary' %>

		  <%= link_to 'Cancelar', foro_path, :class => 'btn btn-danger' %>
		  
		<% end %>

  	</div>
</div>

<script>
	$('#foro').addClass('active');
</script>
