<% if flash[:cart_notice] %>
  <%= render :partial => 'cart/cart_notice' %>
<% end %>

<h3>Tu Carrito</h3>
<ul>
  <% for item in @cart.cart_items %>
    <li id="cart_item_<%= item.ropa.id %>">
      <%= render :partial => 'cart/item', :object => item %>
    </li>
  <% end %>
</ul>
<p id='cart_total'><strong>Total: <%= sprintf "%0.2f â‚¬", @cart.total %></strong></p>
<% unless @cart.cart_items.empty? %>
  <p id='clear_cart_link'>
  <b><%= link_to 'Limpiar carrito', :controller => 'cart', :action => 'clear' %></b>
  </p>
<% end %>
