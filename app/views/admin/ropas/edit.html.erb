<div class="row">
	<div class="col-md-4">
		<%= form_tag admin_ropa_path(@ropa), :method => 'put', :multipart => true do %>
	      <% if @tipoZapatillas then %>
 			<%= render :partial => 'form_zapa' %>
		  <% else %>
 		 	<%= render :partial => 'form_ropa' %>
		  <% end %>
		  <%= submit_tag 'Actualizar ropa', :class => 'btn btn-primary' %>
		<% end %>
	</div>
</div>

<br>
<%= link_to 'Mostrar', admin_ropa_path(@ropa), :class => 'btn btn-success' %>
<%= link_to 'Volver', admin_ropas_path, :class => 'btn btn-default btn-sm' %>
